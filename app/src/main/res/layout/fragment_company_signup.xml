<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CompanySignupFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnSignupSignup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:text="Signup"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etPhoneSignup2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:ems="10"
            android:hint="phone..."
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@+id/etAddressSignup2"
            app:layout_constraintStart_toStartOf="@+id/etPasswordSignup2"
            app:layout_constraintTop_toBottomOf="@+id/etPasswordSignup2" />

        <EditText
            android:id="@+id/etNameSignup2"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="76dp"
            android:layout_marginBottom="86dp"
            android:ems="10"
            android:hint="@string/signup_etName_str"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/etUsernameSignup2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitleSignup2" />

        <EditText
            android:id="@+id/etUsernameSignup2"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="85dp"
            android:ems="10"
            android:hint="username..."
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/etPasswordSignup2"
            app:layout_constraintStart_toStartOf="@+id/etNameSignup2"
            app:layout_constraintTop_toTopOf="@+id/ivProfilePhotoSignup2" />

        <EditText
            android:id="@+id/etAddressSignup2"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_marginBottom="187dp"
            android:ems="10"
            android:hint="address..."
            android:inputType="textPostalAddress"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/etPhoneSignup2" />

        <EditText
            android:id="@+id/etPasswordSignup2"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_marginBottom="86dp"
            android:ems="10"
            android:hint="password..."
            android:inputType="textPassword"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@+id/etAddressSignup2"
            app:layout_constraintStart_toStartOf="@+id/etUsernameSignup2" />

        <ImageView
            android:id="@+id/ivProfilePhotoSignup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="126dp"
            android:layout_marginEnd="45dp"
            android:contentDescription="@string/image_name_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/user"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTitleSignup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/register_company_title"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>